{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": [
    {
      "predeploy": [
        "npm --prefix %RESOURCE_DIR% run lint"
      ],
      "source": "functions",
      "codebase": "default"
    },
    {
      "source": "amazon-clone",
      "codebase": "amazon-clone",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}
